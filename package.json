{
    "private": true,
    "scripts": {
        "start":
            "npm run generatePackageData && npm run createSandbox && npm-run-all --parallel generatePackageData:watch start:server",
        "generatePackageData": "babel-node scripts/generatePackageData.js",
        "generatePackageData:watch": "npm run generatePackageData -- --watch",
        "createSandbox": "babel-node scripts/createSandbox.js",
        "start:server": "babel-node scripts/server.js",
        "setup": "babel-node scripts/setupPackages.js",
        "add": "babel-node scripts/addPackage.js",
        "lint": "babel-node scripts/lint.js",
        "test": "babel-node scripts/test.js",
        "check": "npm run lint && npm run test",
        "release": "lerna publish",
        "precommit": "npm run lint -- -s && npm run test -- -s"
    },
    "devDependencies": {
        "autoprefixer": "7.1.4",
        "babel-cli": "6.24.1",
        "babel-eslint": "8.0.1",
        "babel-jest": "20.0.3",
        "babel-loader": "7.1.1",
        "babel-preset-ieremeev": "1.0.0",
        "babel-preset-react-hmre": "1.1.1",
        "browser-sync": "2.18.12",
        "chokidar": "1.7.0",
        "connect-history-api-fallback": "1.3.0",
        "cross-spawn": "5.1.0",
        "css-loader": "0.28.7",
        "eslint": "3.12.*",
        "eslint-config-airbnb": "13.0.*",
        "eslint-config-ieremeev": "1.0.15",
        "eslint-plugin-import": "2.2.*",
        "eslint-plugin-jsx-a11y": "2.2.*",
        "eslint-plugin-react": "6.8.*",
        "file-loader": "0.11.2",
        "html-webpack-plugin": "2.29.0",
        "husky": "0.13.3",
        "inquirer": "4.0.1",
        "jest": "20.0.4",
        "json-loader": "0.5.4",
        "lerna": "2.4.0",
        "node-sass": "4.5.3",
        "npm-run-all": "4.1.1",
        "postcss-loader": "2.0.6",
        "prettier": "1.8.2",
        "raw-loader": "0.5.1",
        "react-hot-loader": "3.0.0-beta.6",
        "sass-loader": "6.0.6",
        "style-loader": "0.19.0",
        "url-loader": "0.5.9",
        "webpack": "3.1.0",
        "webpack-dev-middleware": "1.11.0",
        "webpack-hot-middleware": "2.18.2"
    },
    "workspaces": ["packages/*"],
    "dependencies": {
        "lodash": "^4.17.4",
        "prismjs": "^1.8.3",
        "prop-types": "^15.6.0",
        "react": "^16.0.0",
        "react-docgen": "^2.19.0",
        "react-dom": "^16.0.0",
        "react-router-dom": "^4.2.2"
    },
    "babel": {
        "presets": ["ieremeev"],
        "env": {
            "development": {
                "presets": ["react-hmre"]
            },
            "production": {
                "plugins": [
                    "transform-react-constant-elements",
                    "transform-react-remove-prop-types"
                ]
            }
        }
    }
}
